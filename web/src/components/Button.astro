---
interface Props {
  id: string
  type?: 'button' | 'submit' | 'reset'
  class?: string
}

const { id, class: className, type = 'button' } = Astro.props
---

<button
  id={id}
  type={type}
  class:list={[
    'focus:outline-none bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:focus:ring-yellow-900 min-w-28',
    className
  ]}
>
  <slot>Button</slot>
</button>
