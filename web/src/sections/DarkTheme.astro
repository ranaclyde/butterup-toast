---
import { Code } from 'astro/components'

import Button from '@/components/Button.astro'

const code = `
  butterup.toast(
    title: 'Hello World!',
    message: 'This is a toast notification.',
    location: 'top-right', // --> default
    type: 'success', // --> default is null
    icon: true, // --> default is false
    theme: 'dark' // --> deafult is 'standard'
  )

`
---

<section class="max-w-3xl mx-auto my-10">
  <h3 class="text-2xl font-semibold">
    Dark theme <span class="text-xs">by midudev community</span>
  </h3>
  <p class="mt-2">
    The butterupToast dark theme is based on the code from the
    <a
      href="https://github.com/midudev/la-velada-web-oficial"
      class="font-medium text-blue-600 dark:text-blue-500 hover:underline"
      >“Web oficial de La Velada IV”</a
    > repository.
  </p>
  <div class="flex flex-col items-center">
    <Code
      code={code}
      lang="ts"
      theme="dracula"
      class="my-5 rounded-xl w-full text-sm lg:text-base"
    />
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-2">
      <Button id="successIconDark">Success Dark</Button>
      <Button id="warningIconDark">Warning Dark</Button>
      <Button id="errorIconDark">Error Dark</Button>
      <Button id="infoIconDark">Info Dark</Button>
    </div>
  </div>
</section>

<script>
  import { butterup } from '../../../src'

  const successIconBtn = document.querySelector(
    '#successIconDark'
  ) as HTMLButtonElement
  const warningIconBtn = document.querySelector(
    '#warningIconDark'
  ) as HTMLButtonElement
  const errorIconBtn = document.querySelector(
    '#errorIconDark'
  ) as HTMLButtonElement
  const infoIconBtn = document.querySelector(
    '#infoIconDark'
  ) as HTMLButtonElement

  successIconBtn.onclick = () => {
    butterup.toast({
      title: 'Yeaaahh!!',
      message: 'This is a success toast',
      type: 'success',
      icon: true,
      theme: 'dark'
    })
  }

  warningIconBtn.onclick = () => {
    butterup.toast({
      title: 'Warning!',
      message: 'This is a warning toast',
      type: 'warning',
      icon: true,
      theme: 'dark'
    })
  }

  errorIconBtn.onclick = () => {
    butterup.toast({
      title: 'Oh nooo!',
      message: 'This is a error toast',
      type: 'error',
      icon: true,
      theme: 'dark'
    })
  }

  infoIconBtn.onclick = () => {
    butterup.toast({
      title: 'Atention',
      message: 'This is a info toast',
      type: 'info',
      icon: true,
      theme: 'dark'
    })
  }
</script>
