---
import { Code } from 'astro/components'

import Button from '@/components/Button.astro'

const code = `
  butterup.toast(
    title: 'Hello World!',
    message: 'This is a toast notification.',
    location: 'top-right', // --> default
    type: 'success', // --> default is null
    icon: true // --> default is false
  )

`
---

<section class="max-w-3xl mx-auto my-10">
  <h3 class="text-2xl font-semibold">Type and Icon: Rich toasts</h3>
  <p class="mt-2">
    The type option allows you to render a toasted notification with a default
    style for success, error, warning and information. The Icon option allows to
    display an icon linked to the chosen type.
  </p>
  <div class="flex flex-col items-center">
    <Code
      code={code}
      lang="ts"
      theme="dracula"
      class="my-5 rounded-xl w-full text-sm lg:text-base"
    />
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-2">
      <Button id="success" class="order-1">Success</Button>
      <Button id="warning" class="order-3 lg:order-2">Warning</Button>
      <Button id="error" class="order-5 lg:order-3">Error</Button>
      <Button id="info" class="order-7 lg:order-4">Info</Button>
      <Button id="successIcon" class="order-2 lg:order-5"
        >Success with Icon</Button
      >
      <Button id="warningIcon" class="order-4 lg:order-6"
        >Warning with Icon</Button
      >
      <Button id="errorIcon" class="order-6 lg:order-7">Error with Icon</Button>
      <Button id="infoIcon" class="order-8 lg:order-8">Info with Icon</Button>
    </div>
  </div>
</section>

<script>
  import { butterup } from '../../../src'

  const successBtn = document.querySelector('#success') as HTMLButtonElement
  const warningBtn = document.querySelector('#warning') as HTMLButtonElement
  const errorBtn = document.querySelector('#error') as HTMLButtonElement
  const infoBtn = document.querySelector('#info') as HTMLButtonElement

  const successIconBtn = document.querySelector(
    '#successIcon'
  ) as HTMLButtonElement
  const warningIconBtn = document.querySelector(
    '#warningIcon'
  ) as HTMLButtonElement
  const errorIconBtn = document.querySelector('#errorIcon') as HTMLButtonElement
  const infoIconBtn = document.querySelector('#infoIcon') as HTMLButtonElement

  successBtn.onclick = () => {
    butterup.toast({
      title: 'Yeaaahh!!',
      message: 'This is a success toast',
      type: 'success'
    })
  }

  warningBtn.onclick = () => {
    butterup.toast({
      title: 'Warning!',
      message: 'This is a warning toast',
      type: 'warning'
    })
  }

  errorBtn.onclick = () => {
    butterup.toast({
      title: 'Oh nooo!',
      message: 'This is a error toast',
      type: 'error'
    })
  }

  infoBtn.onclick = () => {
    butterup.toast({
      title: 'Atention',
      message: 'This is a info toast',
      type: 'info'
    })
  }

  successIconBtn.onclick = () => {
    butterup.toast({
      title: 'Yeaaahh!!',
      message: 'This is a success toast',
      type: 'success',
      icon: true
    })
  }

  warningIconBtn.onclick = () => {
    butterup.toast({
      title: 'Warning!',
      message: 'This is a warning toast',
      type: 'warning',
      icon: true
    })
  }

  errorIconBtn.onclick = () => {
    butterup.toast({
      title: 'Oh nooo!',
      message: 'This is a error toast',
      type: 'error',
      icon: true
    })
  }

  infoIconBtn.onclick = () => {
    butterup.toast({
      title: 'Atention',
      message: 'This is a info toast',
      type: 'info',
      icon: true
    })
  }
</script>
